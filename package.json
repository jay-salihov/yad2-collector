{
  "name": "yad2-collector",
  "version": "0.1.0",
  "private": true,
  "description": "Firefox WebExtension that passively collects Yad2 listing data as you browse",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "start": "web-ext run --source-dir .",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ && tsc --noEmit"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0",
    "web-ext": "^8.0.0"
  }
}
